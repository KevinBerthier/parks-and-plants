<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @garden.banner_url %>');">
  <div class="banner-content">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
      <% @garden.plants.each do |plant| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= plant.image_url %>');">
            <div class="card-tags">
              <% plant.tags.each do |tag| %>
                <span><%= tag.name %></span>
              <% end %>
            </div>
            <div class="card-description">
              <h2>
                <%= link_to plant.name, new_plant_plant_tag_path(plant) %>
              </h2>
            </div>
            <%= link_to "+", plant_path(plant), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
          </div>
        </div>
      <% end %>
  </div>


  <div class="collapse" id="collapseExample">
    <div class="well">
      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
          <%= simple_form_for([@garden, @plant]) do |f| %>
              <%= f.input :name %>
              <%= f.input :image_url %>
              <%= f.button :submit, class: 'btn-primary btn-block' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <a class="btn btn-primary btn-block" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    New Plant
  </a>
</div>



<%= link_to 'Edit', edit_garden_path(@garden) %> |
